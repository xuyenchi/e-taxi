                                        <div class="form-group">
                                            <label for="diachiketthuc">Điểm đến</label>
                                            <input type="text" class="form-control" id="diachiketthuc"
                                                placeholder="Nhập địa chỉ nên cần đến">
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <input type="hidden" name="diemdonlat" id="diemdonlat">
                                        <input type="hidden" name="diemdonlng" id="diemdonlng">
                                        <input type="hidden" name="diemdenlat" id="diemdenlat">
                                        <input type="hidden" name="diemdenlng" id="diemdenlng">
                                        <button type="button" class="btn btn-primary" name="taohanhtrinh" id="taohanhtrinh">Đặt xe</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Thông tin tài xế taxi và hành trình</h3>
                                </div>
                                <form>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label for="hotennv">Họ tên</label>
                                            <input type="text" class="form-control" id="hotennv" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="sodienthoainv">Số điện thoại</label>
                                            <input type="number" class="form-control" id="sodienthoainv" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="hanhtrinh_diachibatdau">Điểm đón</label>
                                            <input type="text" class="form-control" id="hanhtrinh_diachibatdau" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="hanhtrinh_diachiketthuc">Điểm trả khách</label>
                                            <input type="text" class="form-control" id="hanhtrinh_diachiketthuc" disabled>
                                            <input type="hidden" name="hanhtrinhId" id="hanhtrinhId">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                    <div class="row">
                        <!--map-->
