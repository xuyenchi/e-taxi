    <!-- jQuery -->
    <script src="static/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="static/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="static/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mapbox/polyline/src/polyline.js"></script>
    <script src="https://unpkg.com/@goongmaps/goong-sdk/umd/goong-sdk.min.js"></script>
    <script>
        $(function () {
           // lấy thông tin id người dùng từ session sau đăng nhập
           const userid = parseInt('<%=user.id%>');
            // khởi tạo thông tin websocket
            const ws = new WebSocket('<%=ws_url%>');

            // lưu trữ thông tin hành trình
            let hanhtrinh;

            // hiển thị map
            var markerStart;
            var markerEnd;
            var currentMaker;
            goongjs.accessToken = '<%=map_key%>';
            var map = new goongjs.Map({
                container: 'map',
                style: 'https://tiles.goong.io/assets/goong_map_web.json', // stylesheet location
                center: [106.660172, 10.762622], // starting position [lng, lat]
                zoom: 10 // starting zoom
            });
            // Initialize goongClient with an API KEY
            var goongClient = goongSdk({
                accessToken: '<%=map_api_key%>'
            });

            // đăng ký websocket client tới sersocket server
            ws.addEventListener("open", () => {
                console.log("We are connected");
                ws.send(JSON.stringify({'userid' : userid, 'type' : 'register'}));
            });

            // quản lý messages tới từ websocket server
            ws.addEventListener("message", function (event) {
                var messages = JSON.parse(event.data);
                if(messages.type == 'cotaixe') {
                    hanhtrinh = messages.data;
                    //alert('Đã có tài xế');
                    $(document).Toasts('create', {
                        class: 'bg-success',
                        title: 'Thông tin ứng dụng',
                        //autohide: true,
                        //delay: 5000,
                        body: 'Đã có tài xế. Kiểm tra thông tin hành trình và chờ tài xế đón.'
                    });
                    // điền thông tin tài xế vào form
                    $('#hotennv').val(hanhtrinh.hotennv);
                    $('#sodienthoainv').val(hanhtrinh.sodienthoainv);
                    $('#hanhtrinh_diachibatdau').val(hanhtrinh.diachibatdau);
                    $('#hanhtrinh_diachiketthuc').val(hanhtrinh.diachiketthuc);
                    $('#hanhtrinhId').val(hanhtrinh.id);

                    // vẽ đường đi trên map
                    var start = hanhtrinh.diemdonlat + ',' + hanhtrinh.diemdonlng;
                    var end = hanhtrinh.diemdenlat + ',' + hanhtrinh.diemdenlng;
                    // Get Directions
                    goongClient.directions
                        .getDirections({
                            origin : start,
                            destination : end,
                            vehicle: 'car'
                        })
                        .send()
                        .then(function (response) {
                            var directions = response.body;
                            var route = directions.routes[0];

                            var geometry_string = route.overview_polyline.points;
                            var geoJSON = polyline.toGeoJSON(geometry_string);
                            if (typeof map.getSource('route') === 'undefined') {
                                map.addSource('route', {
                                    'type': 'geojson',
                                    'data': geoJSON
                                });
                            }
                            else {
                                map.getSource('route').setData(geoJSON);
                            }
                            
                            // Add route layer below symbol layers
                            if(typeof map.getLayer('route') !== 'undefined') {
                                map.removeLayer('route');
                            }
                            map.addLayer(
                                {
                                    'id': 'route',
                                    'type': 'line',
                                    'source': 'route',
                                    'layout': {
                                        'line-join': 'round',
                                        'line-cap': 'round'
                                    },
                                    'paint': {
                                        'line-color': 'green',
                                        'line-width': 8
                                    }
                                },
                            );
                            
                            // vẽ điểm đi, đến
                            if(markerStart) {
                                markerStart.remove();
                            }
                            markerStart = new goongjs.Marker()
                                .setLngLat([hanhtrinh.diemdonlng, hanhtrinh.diemdonlat])
                                .addTo(map);

                            if(markerEnd) {
                                markerEnd.remove(); 
                            }
                            markerEnd = new goongjs.Marker()
                                .setLngLat([hanhtrinh.diemdenlng, hanhtrinh.diemdenlat])
                                .addTo(map);

                            map.flyTo({
                                center: [
                                    hanhtrinh.diemdonlng,
                                    hanhtrinh.diemdonlat
                                ],
                                essential: true
                            });
                        });
                    }
                    else if(messages.type == 'toado') {
                        var toado = messages.data;
                        console.log(`tọa độ tài xế : ${toado.lat} - ${toado.lng}`);

                        // vẽ tọa đô tài xế
                        if(currentMaker) {
                            currentMaker.remove(); 
                        }
                        currentMaker = new goongjs.Marker({color : 'green'})
                                .setLngLat([toado.lng, toado.lat])
                                .addTo(map);
                    }
            });

            // lấy tọa độ hiên tại laygpshientai
            $("#laygpshientai").click(function () {
                if ("geolocation" in navigator){ 
                    navigator.geolocation.getCurrentPosition(function(position) {
                        $('#diemdonlat').val(position.coords.latitude);
                        $('#diemdonlng').val(position.coords.longitude);
                        $.ajax( {
                            url: "/api/hanhtrinh/searchdiadiemtheotoado?lat=" + position.coords.latitude + "&lng=" + position.coords.longitude,
                            success: function( data ) {
                                $('#diachibatdau').val(data.results[0].formatted_address);
                            }
                        });
                    });
                } else {
                    //alert("Trình duyệt không hỗ trợ lấy tọa độ!");
                    $(document).Toasts('create', {
                        class: 'bg-danger',
                        autohide: true,
                        delay: 5000,
                        title: 'Thông tin tọa độ',
                        body: 'Trình duyệt không hỗ trợ lấy tọa độ!'
                    })
                }
            });

            $('#diachibatdau').autocomplete({
                source: function( request, response ) {
                    $.ajax( {
                        url: "/api/hanhtrinh/searchdiadiem",
                        data: {
                            text: request.term
                        },
                        success: function( data ) {
                            console.log(data);
                            response(data);
                            response($.map(data, function (item) {
                                return {
                                    value: item.description,
                                    id : item.place_id
                                };
                            }));
                        }
                    });
                },
                minLength: 5,
                select: function( event, ui ) {
                    console.log("Selected: " + ui.item.value + " --- " + ui.item.id);
                    $.ajax( {
                        url: "/api/hanhtrinh/detaildiadiem",
                        data: {
                            placeId: ui.item.id
                        },
                        success: function( data ) {
                            console.log(data);
                            $('#diemdonlat').val(data.lat);
                            $('#diemdonlng').val(data.lng);
                        }
                    });
                }
            });

            $('#diachiketthuc').autocomplete({
                source: function( request, response ) {
                    $.ajax( {
                        url: "/api/hanhtrinh/searchdiadiem",
                        data: {
                            text: request.term
                        },
                        success: function( data ) {
                            //console.log(data);
                            //response(data);
                            response($.map(data, function (item) {
                                return {
                                    value: item.description,
                                    id : item.place_id
                                };
                            }));
                        }
                    });
                },
                minLength: 5,
                select: function( event, ui ) {
                    //console.log("Selected: " + ui.item.value + " --- " + ui.item.id);
                    $.ajax( {
                        url: "/api/hanhtrinh/detaildiadiem",
                        data: {
                            placeId: ui.item.id
                        },
                        success: function( data ) {
                            console.log(data);
                            $('#diemdenlat').val(data.lat);
                            $('#diemdenlng').val(data.lng);
                        }
                    });
                }
            });

            // tạo hành trình
            $("#taohanhtrinh").click(function() {
                var tenkhachhang = '<%=user.hoten%>';
                var sodienthoai = '<%=user.sodienthoai%>';
                var diachibatdau = $('#diachibatdau').val();
                var diachiketthuc = $('#diachiketthuc').val();

                var diemdonlat = $('#diemdonlat').val();
                var diemdonlng = $('#diemdonlng').val();
                var diemdenlat = $('#diemdenlat').val();
                var diemdenlng = $('#diemdenlng').val();

                $.ajax({
                    type: "POST",
                    url: "/api/hanhtrinh",
                    dataType: 'json',
                    data: { 
                        tenkhachhang: tenkhachhang,
                        sodienthoai: sodienthoai,
                        diachibatdau : diachibatdau,
                        diachiketthuc : diachiketthuc,
                        diemdonlat : diemdonlat,
                        diemdonlng : diemdonlng,
                        diemdenlat : diemdenlat,
                        diemdenlng : diemdenlng,
                        khachhangid : userid
                    },
                    success: function(result) {
                        if(result.status == true && result.data > 0) {
                            //alert('Đặt xe thành công, đang chờ tìm tài xế taxi');
                            $(document).Toasts('create', {
                                class: 'bg-success',
                                title: 'Thông tin ứng dụng',
                                autohide: true,
                                delay: 5000,
                                body: 'Đặt xe thành công, đang tìm tài xế taxi.'
                            });
                            // gọi socket để tìm tài xế
                            ws.send(JSON.stringify({'userid' : userid, 'type' : 'cuocxemoi', 'data' : {'hanhtrinhid' : result.data}}));
                        }
                        else {
                            //alert('Đặt xe thất bại');
                            $(document).Toasts('create', {
                                class: 'bg-danger',
                                autohide: true,
                                delay: 5000,
                                title: 'Thông tin ứng dụng',
                                body: 'Đặt xe thất bại. Kiểm tra lại thông tin đặt xe.'
                            })
                        }
                    },
                    error: function(jqXHR, textStatus, err) {
                        //show error message
                        alert('text status '+textStatus+', err '+err)
                    }
                });
            });
        });
    </script>
    <script src="jquerylib/jquery-ui.min.js"></script>
    <link href="jquerylib/jquery-ui.min.css" rel="stylesheet" />
