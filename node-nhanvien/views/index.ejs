            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Cập nhật vị trí tài xế</h3>
                                </div>
                                <form>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <button type="button" class="btn btn-block btn-warning" name="laygpshientai" id="laygpshientai">Lấy tọa theo GPS hiện tại</button>
                                        </div>
                                        <div class="form-group">
                                            <label for="diachihientai">Hoặc nhâp dịa chỉ hiện tại</label>
                                            <input type="text" class="form-control" id="diachihientai" placeholder="Nhập địa chỉ hiện tại" >
                                        </div>
                                        <div class="form-group">
                                            <label for="kinhdo">Kinh độ</label>
                                            <input type="text" class="form-control" id="kinhdo" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="vido">Vĩ độ</label>
                                            <input type="text" class="form-control" id="vido" disabled >
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div style="float: left;">
                                            <button type="button" class="btn btn-primary" name="capnhattoado" id="capnhattoado">Cập nhật tọa độ</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Thông tin khách hàng đang đặt xe</h3>
                                </div>
                                <form>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label for="tenkhachhang">Họ tên</label>
                                            <input type="text" class="form-control" id="tenkhachhang" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="sodienthoai">Số điện thoại</label>
                                            <input type="number" class="form-control" id="sodienthoai" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="diachibatdau">Điểm đón</label>
                                            <input type="text" class="form-control" id="diachibatdau" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="diachiketthuc">Điểm trả khách</label>
                                            <input type="text" class="form-control" id="diachiketthuc" disabled>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <input type="hidden" id="hanhtrinhId">
                                        <div style="float: left;">
                                            <button type="button" class="btn btn-primary" name="nhanhanhtrinh" id="nhanhanhtrinh">Nhận hành trình</button>
                                        </div>
                                        <div style="float: left; padding-left: 10px;">
                                            <button type="button" class="btn btn-success" name="batdaudichuyen" id="batdaudichuyen">Di chuyển đón khách</button>
                                        </div>
                                        <div style="float: right;">
                                            <button type="button" class="btn btn-block btn-danger" name="huyhanhtrinh" id="huyhanhtrinh">Hủy hành trình</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                    <div class="row">
                        <!--map-->
                        <div id='map' style='width: 100%; height: 750px;'></div>
