    <!-- jQuery -->
    <script src="static/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="static/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="static/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mapbox/polyline/src/polyline.js"></script>
    <script src="https://unpkg.com/@goongmaps/goong-sdk/umd/goong-sdk.min.js"></script>
    <script>
        $(function () {
            // lấy thông tin id người dùng từ session sau đăng nhập
            const userid = parseInt('<%=user.id%>');
            // khởi tạo thông tin websocket
            const ws = new WebSocket('<%=ws_url%>');
            // tạo lưu trữ thông tin hành trình
            let hanhtrinh;

            // kinh độ , vĩ độ hiện tại của người dùng từ session sau đăng nhập
            $('#vido').val('<%=user.lat%>');
            $('#kinhdo').val('<%=user.lng%>');

            // điểm bắt đầu hành trình
            var markerStart;
            // điểm kết thúc hành trình
            var markerEnd;

            // hiển thị map
            goongjs.accessToken = '<%=map_key%>';
            var map = new goongjs.Map({
                container: 'map',
                style: 'https://tiles.goong.io/assets/goong_map_web.json', // stylesheet location
                center: [106.660172, 10.762622], // starting position [lng, lat]
                zoom: 10
            });
            // khởi tạo goongClient sdk
            var goongClient = goongSdk({
                accessToken: '<%=map_api_key%>'
            });

            // lấy tọa độ hiên tại
            $("#laygpshientai").click(function () {
                if ("geolocation" in navigator) { 
                    // gọi trình duyệt cho lấy thông tin GPS hiện tại
                    navigator.geolocation.getCurrentPosition(function(position) {
                        $('#vido').val(position.coords.latitude);
                        $('#kinhdo').val(position.coords.longitude);
                    });
                } else {
                    //alert("Trình duyệt không hỗ trợ lấy tọa độ!");
                    $(document).Toasts('create', {
                        class: 'bg-danger',
                        autohide: true,
                        delay: 5000,
                        title: 'Thông tin tọa độ',
                        body: 'Trình duyệt không hỗ trợ lấy tọa độ!'
                    })
                }
            });

            // tìm kiếm địa chỉ hiện tại theo từ khóa
            $('#diachihientai').autocomplete({
                source: function( request, response ) {
                    $.ajax( {
                        url: "/api/hanhtrinh/searchdiadiem",
                        data: {
                            text: request.term
                        },
                        success: function( data ) {
                            console.log(data);
                            response(data);
                            response($.map(data, function (item) {
                                return {
                                    value: item.description,
                                    id : item.place_id
                                };
                            }));
                        }
                    });
                },
                minLength: 5,
                select: function( event, ui ) {
                    console.log("Selected: " + ui.item.value + " --- " + ui.item.id);
                    $.ajax( {
                        url: "/api/hanhtrinh/detaildiadiem",
                        data: {
                            placeId: ui.item.id
                        },
                        success: function( data ) {
                            console.log(data);
                            $('#vido').val(data.lat);
                            $('#kinhdo').val(data.lng);
                        }
                    });
                }
            });

            // cập nhật tọa độ hiện tại
            $("#capnhattoado").click(function() {
                $.ajax({
                    type: "PUT",
                    url: "/api/nguoidung/capnhattoato",
                    dataType: 'json',
                    data: { 
                        userid: userid,
                        lat: $('#vido').val(),
                        lng: $('#kinhdo').val(),
                    },
                    success: function(result) {
                        if(result.status == true) {
                            //alert('Cập nhật tọa độ thành công');
                            $('#diachihientai').val('');
                            $(document).Toasts('create', {
                                class: 'bg-success',
                                autohide: true,
                                delay: 5000,
                                title: 'Thông tin tọa độ',
                                body: 'Cập nhật tọa độ thành công.'
                            })
                        }
                        else {
                            //alert('Cập nhật tọa độ thất bại');
                            $(document).Toasts('create', {
                                class: 'bg-danger',
                                autohide: true,
                                delay: 5000,
                                title: 'Thông tin tọa độ',
                                body: 'Cập nhật tọa độ thất bại.'
                            })
                        }
                    },
                    error: function(jqXHR, textStatus, err) {
                        //show error message
                        alert('text status '+textStatus+', err '+err)
                    }
                });
            });

            // nhận hành trình   
            $("#nhanhanhtrinh").click(function() {
                var hanhtrinhId = $('#hanhtrinhId').val();
                $.ajax({
                    type: "PUT",
                    url: "/api/hanhtrinh/nhan",
                    dataType: 'json',
                    data: { 
                        hanhtrinhId: hanhtrinhId,
                        nhanvienId: userid,
                    },
                    success: function(result) {
                        if(result.status == true) {
                            //alert('Nhận hành trình thành công');
                            $(document).Toasts('create', {
                                class: 'bg-success',
                                autohide: true,
                                delay: 5000,
                                title: 'Thông tin ứng dụng',
                                body: 'Nhận hành trình thành công.'
                            })

                            $("#nhanhanhtrinh").prop('disabled', true);
                            $("#huyhanhtrinh").prop('disabled', true);
                            $("#batdaudichuyen").prop('disabled', false);
                            hanhtrinh.hotennv = '<%=user.hoten%>';
                            hanhtrinh.sodienthoainv = '<%=user.sodienthoai%>';
                            // gọi socket để thông báo SMS hoặc thông báo trên APP khách hàng
                            ws.send(JSON.stringify({'userid' : userid, 'type' : 'nhanhanhtrinh', 
                                'data' : {
                                    'hanhtrinh' : hanhtrinh
                                }
                            }));
                        }
                        else {
                            $(document).Toasts('create', {
                                class: 'bg-danger',
                                autohide: true,
                                delay: 5000,
                                title: 'Thông tin ứng dụng',
                                body: 'Nhận hành trình thất bại.'
                            })
                        }
                    },
                    error: function(jqXHR, textStatus, err) {
                        //show error message
                        alert('text status '+textStatus+', err '+err)
                    }
                });
            });

            // hủy hành trình   
            $("#huyhanhtrinh").click(function() {
                var hanhtrinhId = $('#hanhtrinhId').val();
                $.ajax({
                    type: "PUT",
                    url: "/api/hanhtrinh/huy",
                    dataType: 'json',
                    data: { 
                        hanhtrinhId: hanhtrinhId,
                        nhanvienId: userid,
                    },
                    success: function(result) {
                        if(result.status == true) {
                            //alert('Hủy hành trình thành công');
                            $(document).Toasts('create', {
                                class: 'bg-success',
                                autohide: true,
                                delay: 5000,
                                title: 'Thông tin ứng dụng',
                                body: 'Hủy hành trình thành công.'
                            })

                            $("#nhanhanhtrinh").prop('disabled', true);
                            $("#huyhanhtrinh").prop('disabled', true);
                            // gọi socket để thông báo đã hủy cuốc xe, thông báo cuốc xe đến các tài xế khác
                            ws.send(JSON.stringify({'userid' : userid, 'type' : 'huyhanhtrinh', 'data' : {'hanhtrinhid' : hanhtrinhId}}));
                        }
                        else {
                            //alert('Hủy hành trình thất bại');
                            $(document).Toasts('create', {
                                class: 'bg-danger',
                                autohide: true,
                                delay: 5000,
                                title: 'Thông tin ứng dụng',
                                body: 'Hủy hành trình thất bại.'
                            })
                        }
                    },
                    error: function(jqXHR, textStatus, err) {
                        //show error message
                        alert('text status '+textStatus+', err '+err)
                    }
                });
            });

            $("#batdaudichuyen").click(function() {
                //alert('don khach')
                // cập nhật tọa độ di chuyển để báo cho khách hàng
                if(hanhtrinh.khachhangid !== null) {
                    $.ajax({
                        type: "GET",
                        url: "/api/hanhtrinh/duongdi",
                        dataType: 'json',
                        data: { 
                            startlat: $('#vido').val(),
                            startlng: $('#kinhdo').val(),
                            endlat : hanhtrinh.diemdonlat,
                            endlng : hanhtrinh.diemdonlng
                        },
                        success: function(result) {
                            //console.log(result);
                            $("#batdaudichuyen").prop('disabled', true);
                            const steps = result.routes[0].legs[0].steps;
                            let dataToSend = [];
                            //console.log(steps);
                            steps.forEach((item) => {
                                //console.log('start_location lat: ' + item.start_location.lat);
                                //console.log('start_location lng: ' + item.start_location.lng);
                                var dataStart = JSON.stringify({'userid' : userid, 'type' : 'dichuyen', 'data' : {'khachhangid' : hanhtrinh.khachhangid, 'lat' : item.start_location.lat, 'lng' : item.start_location.lng}});
                                //console.log(data);
                                dataToSend.push(dataStart);
                                
                                //console.log('end_location lat: ' + item.end_location.lat);
                                //console.log('end_location lng: ' + item.end_location.lng);
                                var dataEnd = JSON.stringify({'userid' : userid, 'type' : 'dichuyen', 'data' : {'khachhangid' : hanhtrinh.khachhangid, 'lat' : item.end_location.lat, 'lng' : item.end_location.lng}});
                                //console.log(data2);
                                dataToSend.push(dataEnd);
                            });

                            // Vòng lặp để gửi dữ liệu
                            //console.log(dataToSend);
                            dataToSend.forEach((item, index) => {
                                //console.log(item);
                                // Gửi dữ liệu sau mỗi khoảng thời gian cố định
                                setTimeout(() => {
                                    ws.send(item);
                                }, index * 5000); // Sử dụng biến index để tính thời gian delay
                            });
                        },
                        error: function(jqXHR, textStatus, err) {
                            //show error message
                            alert('text status '+textStatus+', err '+err)
                        }
                    });
                }
            });
            
            // đăng ký websocket client với websocket server
            ws.addEventListener("open", () => {
                console.log("We are connected");
                ws.send(JSON.stringify({'userid' : userid, 'type' : 'register'}));
            });

            // quản lý message từ websocket server gửi lên
            ws.addEventListener("message", function (event) {
                //alert('Có khách hàng đặt xe');
                $(document).Toasts('create', {
                    class: 'bg-success',
                    title: 'Thông tin ứng dụng',
                    body: 'Có khách hàng đặt xe. Kiểm tra thông tin và nhận hoặc hủy chuyến.'
                })

                hanhtrinh = JSON.parse(event.data);
                $("#nhanhanhtrinh").prop('disabled', false);
                $("#huyhanhtrinh").prop('disabled', false);
                $("#batdaudichuyen").prop('disabled', true);
                $('#tenkhachhang').val(hanhtrinh.tenkhachhang);
                $('#sodienthoai').val(hanhtrinh.sodienthoai);
                $('#diachibatdau').val(hanhtrinh.diachibatdau);
                $('#diachiketthuc').val(hanhtrinh.diachiketthuc);
                $('#hanhtrinhId').val(hanhtrinh.id);

                // vẽ đường đi trên map
                var start = hanhtrinh.diemdonlat + ',' + hanhtrinh.diemdonlng;
                var end = hanhtrinh.diemdenlat + ',' + hanhtrinh.diemdenlng;
                // Get Directions
                goongClient.directions
                    .getDirections({
                        origin : start,
                        destination : end,
                        vehicle: 'car'
                    })
                    .send()
                    .then(function (response) {
                        var directions = response.body;
                        var route = directions.routes[0];

                        var geometry_string = route.overview_polyline.points;
                        var geoJSON = polyline.toGeoJSON(geometry_string);
                        if (typeof map.getSource('route') === 'undefined') {
                            map.addSource('route', {
                                'type': 'geojson',
                                'data': geoJSON
                            });
                        }
                        else {
                            map.getSource('route').setData(geoJSON);
                        }
                        
                        // Add route layer below symbol layers
                        if(typeof map.getLayer('route') !== 'undefined') {
                            map.removeLayer('route');
                        }
                        map.addLayer(
                            {
                                'id': 'route',
                                'type': 'line',
                                'source': 'route',
                                'layout': {
                                    'line-join': 'round',
                                    'line-cap': 'round'
                                },
                                'paint': {
                                    'line-color': 'green',
                                    'line-width': 8
                                }
                            },
                        );
                        
                        // vẽ điểm đi, đến
                        if(markerStart) {
                            markerStart.remove();
                        }
                        markerStart = new goongjs.Marker()
                            .setLngLat([hanhtrinh.diemdonlng, hanhtrinh.diemdonlat])
                            .addTo(map);

                        if(markerEnd) {
                            markerEnd.remove(); 
                        }
                        markerEnd = new goongjs.Marker()
                            .setLngLat([hanhtrinh.diemdenlng, hanhtrinh.diemdenlat])
                            .addTo(map);
                        // di chuyển map center đến điểm đón
                        map.flyTo({
                            center: [
                                hanhtrinh.diemdonlng,
                                hanhtrinh.diemdonlat
                            ],
                            essential: true
                        });
                    });
            });
        });
    </script>
    <script src="jquerylib/jquery-ui.min.js"></script>
    <link href="jquerylib/jquery-ui.min.css" rel="stylesheet" />
</body>
